/dts-v1/;

#include "mt7621.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "flyingvoice,g902", "mediatek,mt7621-soc";
	model = "Flying Voice G902";

	aliases {
		led-boot = &led_power;
		led-failsafe = &led_power;
		led-running = &led_power;
		led-upgrade = &led_power;
	};

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x10000000>;
	};

	chosen {
		bootargs = "console=ttyS0,115200";
	};

	leds {
		compatible = "gpio-leds";

		led_power: power {
			label = "g902:green:power";
			gpios = <&gpio0 0 GPIO_ACTIVE_LOW>;
		};

		usb {
			label = "g902:green:usb";
			gpios = <&gpio0 18 GPIO_ACTIVE_LOW>;
		};
	};

	keys {
		compatible = "gpio-keys-polled";
		poll-interval = <20>;

		reset {
			label = "reset";
			gpios = <&gpio0 3 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};
};

&sdhci {
	status = "okay";
};

&spi0 {
	status = "okay";

	m25p80@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "Bootloader";
				reg = <0x0 0x30000>;
				read-only;
			};

			/* u-boot will erase this after a saveenv.
			   If this is all 0xFF the Mac_bak can be
			   used to restore it. */
			partition@30000 {
				label = "Mac";
				reg = <0x30000 0x10000>;
			};

			factory: partition@40000 {
				label = "Factory";
				reg = <0x40000 0x10000>;
				read-only;
			};

			partition@50000 {
				label = "Stock_Kernel";
				reg = <0x50000 0x170000>;
			};

			partition@0x1c0000 {
				label = "Stock_RootFs";
				reg = <0x1c0000 0x630000>;
			};

			partition@7f0000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x7f0000 0x7a0000>;
			};

			partition@f90000 {
				label = "Stock_Logs_Configs";
				reg = <0xf90000 0x60000>;
				read-only;
			};

			/* u-boot will erase Mac after a saveenv.
			   This will make this the only "good" env
			   Mac can be restored with this partition. */
			partition@ff0000 {
				label = "Mac_bak";
				reg = <0xff0000 0x10000>;
				read-only;
			};
		};
	};
};

&pcie {
	status = "okay";
};

&pcie0 {
	wifi@0,0 {
		compatible = "pci14c3,7662";
		reg = <0x0000 0 0 0 0>;
		mediatek,mtd-eeprom = <&factory 0x8000>;
		ieee80211-freq-limit = <5000000 6000000>;
		led {
			led-sources = <2>;
		};
	};
};

&pcie1 {
	wifi@0,0 {
		compatible = "pci14c3,7603";
		reg = <0x0000 0 0 0 0>;
		mediatek,mtd-eeprom = <&factory 0x0000>;
		ieee80211-freq-limit = <2400000 2500000>;
		led {
			led-sources = <2>;
		};
	};
};

&ethernet {
	mtd-mac-address = <&factory 0x04>;
};

&pinctrl {
	state_default: pinctrl0 {
		gpio {
			ralink,group = "wdt", "rgmii2";
			ralink,function = "gpio";
		};
	};
};
